  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://127.0.0.1:8000/",
          "protocol": "http",
          "host": ["127", "0", "0", "1"],
          "port": "8000",
          "path": [""]
        }
      }
    },
    {
      "name": "Company Signup",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"company_name\": \"Green Energy Corp\",\n  \"location\": \"San Francisco, CA\",\n  \"business_sector\": \"Renewable Energy\",\n  \"email\": \"info@greenenergy.com\",\n  \"telephone\": \"+1-555-0123\",\n  \"password\": \"SecurePass123!\"\n}"
        },
        "url": {
          "raw": "http://127.0.0.1:8000/signup",
          "protocol": "http",
          "host": ["127", "0", "0", "1"],
          "port": "8000",
          "path": ["signup"]
        },
        "description": "Register a new company account. Password will be hashed before storage."
      }
    },
    {
      "name": "Predict CO2 Emissions (Single)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"sample\": {\n    \"electricity_kwh\": 1000,\n    \"diesel_litres\": 50,\n    \"output_tons\": 200,\n    \"temp_c\": 25,\n    \"equipment_load_pct\": 60\n  }\n}"
        },
        "url": {
          "raw": "http://127.0.0.1:8000/predict",
          "protocol": "http",
          "host": ["127", "0", "0", "1"],
          "port": "8000",
          "path": ["predict"]
        },
        "description": "Predict CO2 emissions for a single sample"
      }
    },
    {
      "name": "Predict CO2 Emissions (Batch)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"samples\": [\n    {\n      \"electricity_kwh\": 1000,\n      \"diesel_litres\": 50,\n      \"output_tons\": 200\n    },\n    {\n      \"electricity_kwh\": 1500,\n      \"diesel_litres\": 75,\n      \"output_tons\": 300\n    }\n  ]\n}"
        },
        "url": {
          "raw": "http://127.0.0.1:8000/predict",
